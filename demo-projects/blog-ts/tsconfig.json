{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017"],
        "module": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "target": "esnext",
        "outDir": "dist"
    },
    "include": ["./src/**/*.ts"],
}